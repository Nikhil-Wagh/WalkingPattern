    <!--TODO : Add header to a group-->
    <group
        android:id="@+id/radio_buttons_accelerometer"
        android:checkableBehavior="single"
        android:visible="true">
        <item
            android:id="@+id/radio_buttonX-axis"
            android:icon="@drawable/ic_x_axis_black_24dp"
            android:title="@string/show_x_axis"
            app:actionViewClass="android.widget.RadioButton"
            android:checked="true"/>
        <item
            android:id="@+id/radio_buttonY-axis"
            android:icon="@drawable/ic_y_axis"
            android:title="@string/show_y_axis"
            app:actionViewClass="android.widget.RadioButton" />
        <item
            android:id="@+id/radio_buttonZ-axis"
            android:icon="@drawable/ic_z_axis_24dp"
            android:title="@string/show_z_axis"
            app:actionViewClass="android.widget.RadioButton" />
    </group>

    <item
        android:title="@string/external">
        <menu>
            <item
                android:id="@+id/button_download_data_ActivityDrawer"
